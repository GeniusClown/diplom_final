<Page x:Class="LifeTrack.Pages.ExaminationResultPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="ExaminationResultPage">

    <Grid Margin="10">
        <Image Source="/Photo/result.jpg" Stretch="Fill" Height="400" Opacity="0.3"></Image>
        <StackPanel HorizontalAlignment="Center">
            <TextBlock Text="Результат обследования" HorizontalAlignment="Center" FontWeight="Bold" FontSize="20"/>
            <TextBox x:Name="ExaminationResultTextBox" Height="100" Margin="0,10,0,0" TextWrapping="Wrap" AcceptsReturn="True"/>

            <TextBlock Text="Рецепт" FontWeight="Bold" HorizontalAlignment="Center" FontSize="20" Margin="0,10,0,0"/>
            <ComboBox x:Name="PrescriptionComboBox" Margin="0,10,0,0">
                <ComboBoxItem Content="Лекарство 1"/>
                <ComboBoxItem Content="Лекарство 2"/>
                <ComboBoxItem Content="Лекарство 3"/>
                <ComboBoxItem Content="Нет необходимости"/>
            </ComboBox>

            <TextBlock Text="Советы врача" HorizontalAlignment="Center" FontWeight="Bold" FontSize="20" Margin="0,10,0,0"/>
            <TextBox x:Name="AdviceTextBox" Height="100" Margin="0,10,0,0" TextWrapping="Wrap" AcceptsReturn="True"/>

            <Button Content="Сохранить" Click="SaveButton_Click" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Page>
