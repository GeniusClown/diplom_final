<Page x:Class="LifeTrack.Pages.Zapisi"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LifeTrack.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Zapisi">

    <Grid>
        <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Margin="10">
                <TextBlock Margin="0 2 0 0">Пациент</TextBlock>
                <TextBlock Margin="0 9 0 0">Дата визита</TextBlock>
                <TextBlock Margin="0 9 0 0">Результаты обследования</TextBlock>
                <TextBlock Margin="0 9 0 0">Прописанные лекраства</TextBlock>
            </StackPanel>
            <StackPanel Margin="10">
                <TextBox Margin="0 0 0 0" Text="{Binding id_users}"></TextBox>
                <TextBox Margin="0 5 0 0" Text="{Binding id_status}"></TextBox>
                <TextBox Margin="0 5 0 0" Text="{Binding id_point}"></TextBox>
                <TextBox Margin="0 5 0 0" Text="{Binding code}"></TextBox>

                <Button Width="200" Click="Save" Margin="0 10 0 0" Style="{StaticResource CustomButtonStyle}">Сохранить</Button>
            </StackPanel>
        </WrapPanel>
    </Grid>
</Page>
